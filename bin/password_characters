#!/usr/bin/env ruby
require_relative '../lib/password_and_ordinals'

password = if ARGV.any?
             ARGV[0]
           else
             puts 'Enter password:'
             gets
           end

character_ordinals = if ARGV.any?
                       ARGV[1]
                     else
                       puts 'Enter indices:'
                       gets
                     end

def character_ordinals_to_a character_ordinals
  character_ordinals.split ','
end

begin
  puts PasswordAndOrdinals.new(password, character_ordinals_to_a(character_ordinals).map(&:to_i) ).characters.join ' '
rescue Exception => e
  abort e.message
end
