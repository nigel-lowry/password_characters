#!/usr/bin/env ruby
password = if ARGV.any?
             ARGV[0]
           else
             puts 'Enter password:'
             gets
           end

characters_indices = if ARGV.any?
                       ARGV[1]
                     else
                       puts 'Enter indices:'
                       gets
                     end

indices = characters_indices.split(',').map { |n| n.to_i }
password_characters = indices.map { |index| password[index - 1] }
puts password_characters.join ' '