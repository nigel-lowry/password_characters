#!/usr/bin/env ruby
password = if ARGV.any?
             ARGV[0]
           else
             puts 'Enter password:'
             gets
           end

character_ordinals = if ARGV.any?
                       ARGV[1]
                     else
                       puts 'Enter indices:'
                       gets
                     end

class PasswordCharacters
  def initialize password, character_ordinals
    @password = password
    @character_ordinals = character_ordinals
  end

  def characters
    password_characters = indices.map { |index| @password[index] }
    puts password_characters.join ' '
  end

  def indices
    ordinals = @character_ordinals.split(',').map { |n| n.to_i }
    ordinals.map { |n| n - 1 }
  end
end

PasswordCharacters.new(password, character_ordinals).characters





