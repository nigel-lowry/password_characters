#!/usr/bin/env ruby
password = if ARGV.any?
             ARGV[0]
           else
             puts 'Enter password:'
             gets
           end

character_ordinals = if ARGV.any?
                       ARGV[1]
                     else
                       puts 'Enter indices:'
                       gets
                     end

class PasswordCharacters
  def initialize password, character_ordinals
    @password = password
    @character_indices = character_ordinals
  end

  def characters
    indices = @character_indices.split(',').map { |n| n.to_i }
    password_characters = indices.map { |index| @password[index - 1] }
    puts password_characters.join ' '
  end
end

PasswordCharacters.new(password, character_ordinals).characters





