#!/usr/bin/env ruby
password = if ARGV.any?
             ARGV[0]
           else
             puts 'Enter password:'
             gets
           end

character_ordinals = if ARGV.any?
                       ARGV[1]
                     else
                       puts 'Enter indices:'
                       gets
                     end

def character_ordinals_to_a character_ordinals
  character_ordinals.split ','
end

class PasswordCharacters
  def initialize password, character_ordinals
    @password = password
    @indices = indices character_ordinals
  end

  def characters
    password_characters = @indices.map { |index| @password[index] }
    puts password_characters.join ' '
  end

  private

  def indices character_ordinals
    character_ordinals.map { |n| n.to_i - 1 }
  end
end

PasswordCharacters.new(password, character_ordinals_to_a(character_ordinals)).characters





